<div class="booking-container">
    <div class="booking-preview-header">
        <div class="booking-preview-title">{{ function('pll_e', 'bookingTabConfirmationLabelReview') }}</div>
        <div class="alert alert-warning" role="alert">
            {{ function('pll_e', 'bookingTabConfirmationLabelMessage') }}.
        </div>
    </div>
    <div class="booking-preview-content">
        <div class="booking-preview-content__info">
            <div class="booking-info">
                <div class="booking-preview-content__info-item">
                    <span class="item-name">TÃ¤isnimi:</span>
                    <div class="item-value">{{ bookingForm.firstName }} {{ bookingForm.lastName }}</div>
                </div>

                <div class="booking-preview-content__info-item">
                    <span class="item-name">Telefon:</span>
                    <div class="item-value">{{ bookingForm.phone }}</div>
                </div>

                <div class="booking-preview-content__info-item">
                    <span class="item-name">Email:</span>
                    <div class="item-value">{{ bookingForm.email }}</div>
                </div>

                <div class="booking-preview-content__info-item">
                    <span class="item-name">Address:</span>
                    <div class="item-value">{{ bookingForm.address }}</div>
                </div>
            </div>
            <div class="booking-info">
                <div class="booking-preview-content__info-item">
                    <span class="item-name">Kuupaev:</span>
                    <div class="item-value">{{ bookingForm.date }}</div>
                </div>

                <div class="booking-preview-content__info-item">
                    <span class="item-name">Eesmark:</span>
                    <div class="item-value">{{ bookingForm.purpose }}</div>
                </div>

                <div class="booking-preview-content__info-item">
                    <span class="item-name">Osalejaid:</span>
                    <div class="item-value">{{ bookingForm.participants }}</div>
                </div>
            </div>
            {% if bookingForm.info %}
                <div class="booking-info-additional">
                    <div class="booking-preview-content__info-item">
                        <span class="item-name">Lisainfo:</span>
                        <div class="item-value">{{ bookingForm.info }}</div>
                    </div>
                </div>
            {% endif %}
        </div>
        <table class="booking-preview-content__table">
            <tr>
                <th>{{ function('pll_e', 'bookingTabConfirmationLabelRoomName') }}</th>
                <th>{{ function('pll_e', 'bookingTabConfirmationLabelTime') }}</th>
                <th>{{ function('pll_e', 'bookingTabConfirmationLabelItemPrice') }}</th>
                <th>{{ function('pll_e', 'bookingTabConfirmationLabelItemTotalPrice') }}</th>
            </tr>
            {% for item in bookingForm.invoiceRows %}
                <tr>
                    <td>
                        {{ item.name }}
                    </td>
                    <td>
                        {{ bookingForm.timeFrom }}-{{ bookingForm.timeUntil }}
                            {% if item.amount == 1 %}
                                ({{ item.amount }} {{ function('pll_e', 'bookingTabConfirmationLabelTimeUnit') }})
                            {% elseif item.amount == 0 or item.amount >= 5 %}
                                ({{ item.amount }} {{ function('pll_e', 'bookingTabConfirmationLabelTimeUnitsSecond') }})
                            {% else %}
                                ({{ item.amount }} {{ function('pll_e', 'bookingTabConfirmationLabelTimeUnitsFirst') }})
                            {% endif %}
                    </td>
                    <td>
                        {{ item.price }} EUR
                    </td>
                    <td>
                        {{ item.total }} EUR
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div class="booking-preview-footer">
        <div class="booking-preview-footer__total alert alert-dark" role="alert">
            {{ function('pll_e', 'bookingTabConfirmationLabelTotalAmount') }}
            : {{ bookingForm.totalAmount }} EUR
        </div>
        <button type="button" class="booking-submit-button btn btn-primary">
            {{ function('pll_e', 'bookingTabConfirmationLabelSubmitButton') }}
        </button>
    </div>
</div>


