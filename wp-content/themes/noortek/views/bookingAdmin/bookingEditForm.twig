    {% for key, item in resources %}
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="resources{{ key }}"
                   name="resources[]"
                   value="{{ item.ID }}"
                    {% for equipment in resource %}
                        {{ item.ID == equipment ? 'checked' : '' }}
                    {% endfor %}
            >
            <label class="form-check-label" for="resources{{ key }}">
                {{ item.post_title }}
            </label>
        </div>
    {% endfor %}
</div>

