<div>
    <label for="status">Status</label>
    <select id="status" name="status">
        {% for item in statuses %}
            <option {{ (status == item) ? 'selected' : '' }} value="{{ item }}">{{ item }}</option>
        {% endfor %}
    </select>
</div>
